<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <FrameLayout
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#ffffff"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/what"
                android:text="What"
                android:textColor="#d6d6d6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/name"
                android:text="Roasted Water"
                android:layout_below="@id/what"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/where"
                android:layout_below="@id/name"
                android:text="Where"
                android:textColor="#d6d6d6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/address"
                android:text="North Pole behind the rainbow under the pot of gold"
                android:layout_below="@id/where"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/clock"
                android:src="@drawable/clock_copy_2"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/time"
                android:text="20m"
                android:layout_alignParentRight="true"
                android:layout_below="@id/clock"
                android:textColor="#c2c2c2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fafafa"
            />

        <TextView
            android:text="Bids:"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            />

        <LinearLayout
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            >
            <include layout="@layout/list_item_bidder"/>
            <include layout="@layout/list_item_bidder"/>
            <include layout="@layout/list_item_bidder"/>
            <include layout="@layout/list_item_bidder"/>
            <include layout="@layout/list_item_bidder"/>
            <include layout="@layout/list_item_bidder"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>